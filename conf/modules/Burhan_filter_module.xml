<!DOCTYPE module SYSTEM "module.dtd">

<module name="Burhan_filter_module" dir="computer_vision">
  <doc>
    <description>Burhan filter detector
    Detects the cleared path using the Burhan filter. Optionally draws on image.
    </description>
    <define name="SEND_ABI_ID" value="1" description="ABI sender id for burhan filter messages (default: 1)"/>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="Burhan_filter_settings">
        <dl_setting var="H_low" min="0" step="1" max="255" shortname="H_low"/>
        <dl_setting var="H_hi" min="0" step="1" max="255" shortname="H_hi"/>
        <dl_setting var="S_low" min="0" step="1" max="255" shortname="S_low"/>
        <dl_setting var="S_hi" min="0" step="1" max="255" shortname="S_hi"/>
        <dl_setting var="V_low" min="0" step="1" max="255" shortname="V_low"/>
        <dl_setting var="V_hi" min="0" step="1" max="255" shortname="V_hi"/>
        <dl_setting var="gray_threshold" min="0" step=".5" max="100" shortname="gray_filt_thre"/>
        <dl_setting var="STEP" min="1" step="1" max="100" shortname="filter_STEP"/>
        <dl_setting var="filter_height_cut" min="0" step="1" max="240" shortname="filter_cut"/>
        <dl_setting var="thresh_lower" min="0" step="1" max="100" shortname="min_ones_thres"/>
        <dl_setting var="sections" min="1" step="1" max="50" shortname="N_sections"/>
        <dl_setting var="weight_green_input" min="0" step=".05" max="1" shortname="weight_green"/>
        <dl_setting var="weight_grad_input" min="0" step=".05" max="1" shortname="weight_grad"/>
        <dl_setting var="print_weights" min="0" step="1" max="1" values="False|True" shortname="print_weights"/>
        <dl_setting var="draw_on_img"  min="0" step="1" max="1" values="False|True" shortname="draw_on_img" />
      </dl_settings>
      <dl_settings name="Obstacles_failsafe_settings">
        <dl_setting var="double_gradient_bool" min="0" step="1" max="1" values="False|True" shortname="double_grad_active"/>
        <dl_setting var="min_green_thre" min="0" step=".05" max="1" shortname="min_green_thre"/>
        <dl_setting var="bin_threshold" min="0" step=".05" max="1" shortname="bin_threshold"/>
        <dl_setting var="min_sections_failsafe" min="0" step="1" max="30" shortname="Sections_failsafe"/>
        <dl_setting var="Failsafe_increment_int" min="0" step="1" max="30" shortname="Failsafe_increment"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <depends>video_thread</depends>

  <header>
    <file name="Burhan_filter_module_fcn.h"/>
  </header>

  <init fun="burhan_filter_init()"/>
  <periodic fun="burhan_filter_periodic()" freq="50"/>
  <makefile target="ap|nps">
    <file name="Burhan_filter_module_fcn.c"/>
  </makefile>
</module>

